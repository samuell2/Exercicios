using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    internal class Relogio
    {
        public int Hora;
        public int Minuto;
        public int Segundo;

        public void Pulso()
        {
            Segundo++;
            if (Segundo == 60)
            {
                Minuto++;
                Segundo = 0;
                if (Minuto == 60)
                {
                    Hora++;
                    Minuto = 0;
                }

            }
            
        }

        public string Imprimir()
        {
            
